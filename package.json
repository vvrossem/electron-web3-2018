{
  "name": "web3-boilerplate-2018-2019",
  "version": "1.0.0",
  "main": "src/server/bin/www",
  "private": true,
  "scripts": {
    "start": "node src/server/bin/www",
    "build": "webpack --mode production --config config/webpack.config.js",
    "clean": "rm -rf dist",
    "client": "webpack-dev-server --mode development --config config/webpack.config.js",
    "clientElectron": "cross-env ELECTRON=true webpack-dev-server --mode development --config config/webpack.config.js",
    "server": "cross-env NODE_ENV=development nodemon src/server/bin/www",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "electron": "electron ./src/electron-client/main.js",
    "electron-dev": "concurrently \"npm run server\" \"npm run client\" \"npm run electron\"",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^3.0.2",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.1.3",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^6.0.0",
    "ejs": "~2.5.7",
    "electron": "^3.0.9",
    "express": "^4.16.3",
    "http-errors": "~1.6.2",
    "jsonwebtoken": "^8.4.0",
    "mongodb": "^3.1.6",
    "morgan": "~1.9.0",
    "node-sass": "^4.9.3",
    "node-sass-middleware": "0.11.0",
    "react": "^16.3.1",
    "react-bootstrap": "^1.0.0-beta.1",
    "react-dom": "^16.3.1",
    "react-router-dom": "^4.3.1",
    "react-spinners": "^0.4.7",
    "sass-loader": "^7.1.0",
    "webpack-manifest-plugin": "^2.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.5.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.3",
    "style-loader": "^0.22.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  }
}